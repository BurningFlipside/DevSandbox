#!/usr/bin/env bash
# shellcheck disable=SC1090

function usage() {
  cat <<- EOF

  run ApacheStudio application container

  usage: $0

EOF
}

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source "$DIR/../lib/bashui.sh"

get_platform

docker stop apache-studio.burningflipside.local

docker run --rm -d \
  --name apache-studio.burningflipside.local \
  -e DISPLAY="$DOCKER_DISPLAY" \
  -v /tmp/.X11-unix:/tmp/.X11-unix \
  -v "$HOME"/.ApacheDirectoryStudio:/home/app/.ApacheDirectoryStudio \
  --network flipside_dev \
  burnerdev/apache-directory-studio
