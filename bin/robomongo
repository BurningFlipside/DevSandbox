#!/usr/bin/env bash
# shellcheck disable=SC1090

function usage() {
  cat <<- EOF

  run RoboMongo application container

  usage: $0

EOF
}

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source "$DIR/../lib/bashui.sh"

get_platform

docker stop robomongo.burningflipside.local

docker run --rm -d \
  --name robomongo.burningflipside.local \
  -e DISPLAY="$DOCKER_DISPLAY" \
  -v /tmp/.X11-unix:/tmp/.X11-unix \
  -v "$HOME"/.config/robomongo:/home/app/.config/robomongo \
  --network flipside_dev \
  burnerdev/robomongo
